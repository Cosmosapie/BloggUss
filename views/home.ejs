<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head") %>
    <title>Home Page</title>
</head>

<body>
    <%- include("./partials/nav") %> 
    
    <div class="container mt-3">
        <div class="row row-cols-4">
        <% blogs.forEach(blog => { %>
            <div class="col">
            <div class="card col mb-3" style="width: 18rem; height: 18rem;">
                <div style="width:18rem; height:12rem;">
                <img src="<%= blog.coverImageURL %>" class="card-img-top" style="width: 18rem; height: 12rem;">
                </div>
                <div class="card-body">
                  <h5 class="card-title"> <%= blog.title  %> </h5>
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>
                </div>
              </div>
            </div>
        <% }) %>
        </div>
    </div>

    <%- include("./partials/scripts") %>
</body>
</html>